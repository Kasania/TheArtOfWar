<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary">

    <Button
            android:text="@string/chapter_8_name"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn_study_gochapter8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="parent" android:layout_margin="1dp" android:gravity="center"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="1.0" android:background="@color/darkRed"
            android:textColor="@color/colorPrimary" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/chapter_9_name"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn_study_gochapter9"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintBottom_toTopOf="@+id/guideline39"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_margin="1dp" android:gravity="center" android:textSize="36sp"
            android:background="@color/darkRed" android:textColor="@color/colorPrimary" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/chapter_10_name"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn_study_gochapter10"
            app:layout_constraintTop_toTopOf="@+id/guideline39"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_margin="1dp" android:gravity="center" android:textSize="36sp"
            android:background="@color/darkRed" android:textColor="@color/colorPrimary" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline40"/>
    <Button
            android:text="@string/chapter_11_name"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn_study_gochapter11"
            app:layout_constraintTop_toTopOf="@+id/guideline40"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_margin="1dp" android:gravity="center"
            android:textSize="36sp" android:background="@color/darkRed" android:textColor="@color/colorPrimary"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline14" app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline39"
            app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline40"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.75239396"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline6"
            app:layout_constraintGuide_percent="0.1"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline41" app:layout_constraintGuide_percent="0.85"/>
    <Button

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_backPage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline41"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp" android:background="@android:drawable/ic_delete"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
</android.support.constraint.ConstraintLayout>