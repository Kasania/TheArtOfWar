<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/contents_subject_selection">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:weightSum="13" android:layout_margin="8dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_1"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_1"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_2"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_2"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_3"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_3"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_4"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_4"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_5"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_5"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_6"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_6"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/contents_subject_7"
                    android:layout_height="160dp" app:srcCompat="@drawable/btn_subject_7"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal">
            </ImageView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>