<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:padding="0dp"
                                             android:layout_margin="0dp">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline13"
            app:layout_constraintGuide_percent="0.151"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline6"
            app:layout_constraintGuide_percent="0.434"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline12"
            app:layout_constraintGuide_percent="0.717"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="@+id/guideline13"
            app:layout_constraintTop_toTopOf="parent" android:background="@drawable/img_topbar_subject_4">

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/btn_study_gochapter5"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/guideline13" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/btn_chapter_5"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/guideline6">

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_study_gochapter6"
            android:background="@drawable/btn_chapter_6" app:layout_constraintBottom_toTopOf="@+id/guideline12"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginBottom="4dp">

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_gochapter7" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/btn_chapter_7" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/guideline12">

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>