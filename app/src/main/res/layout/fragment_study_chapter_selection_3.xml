<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:padding="0dp"
                                             android:layout_margin="0dp">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline36"
            app:layout_constraintGuide_percent="0.34"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline37"
            app:layout_constraintGuide_percent="0.67"/>
    <Button
            android:text="@string/chapter_5_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/btn_study_gochapter5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline36" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/darkRed"
            android:textColor="@color/realYellow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="1dp" android:textSize="36sp"/>
    <Button
            android:text="@string/chapter_6_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_gochapter6"
            app:layout_constraintTop_toTopOf="@+id/guideline36"
            app:layout_constraintBottom_toTopOf="@+id/guideline37"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/darkRed"
            android:textColor="@color/realYellow"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="1dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="36sp"/>
    <Button
            android:text="@string/chapter_7_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_gochapter7"
            app:layout_constraintTop_toTopOf="@+id/guideline37"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="0dp" android:background="@color/darkRed"
            android:textColor="@color/realYellow" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp" android:textSize="36sp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline44"
            app:layout_constraintGuide_percent="0.1"/>
    <Button

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_backPage3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp" android:background="@android:drawable/ic_delete"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline44"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline45"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline45" app:layout_constraintGuide_percent="0.85"/>
</android.support.constraint.ConstraintLayout>