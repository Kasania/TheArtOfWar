<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/holo_purple">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline59"
            app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline60"
            app:layout_constraintGuide_percent="0.75"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline53" app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline55"
            app:layout_constraintGuide_percent="0.15"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline57"
            app:layout_constraintGuide_percent="0.35"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline56"
            app:layout_constraintGuide_percent="0.85"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline58"
            app:layout_constraintGuide_percent="0.65"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/guideline55" app:layout_constraintBottom_toTopOf="@+id/guideline57"
            app:layout_constraintStart_toStartOf="@+id/guideline59"
            app:layout_constraintEnd_toStartOf="@+id/guideline60"
            android:background="@color/testPrimary" android:textSize="36sp" android:textStyle="bold"
            android:textColor="@color/testSecondary"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/guideline58" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline56"
            app:layout_constraintStart_toStartOf="@+id/guideline59" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline60"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:background="@color/testPrimary2"
            android:textSize="36sp" android:textStyle="bold" android:textColor="@color/testSecondary2"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/guideline53"
            android:id="@+id/constraintLayout" android:background="@color/testBackground"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="@+id/guideline53"
            android:background="@color/testBackground2">

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>