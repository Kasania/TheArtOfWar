<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimaryDark">

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline46" app:layout_constraintGuide_percent="0.08071136"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline47" app:layout_constraintGuide_percent="0.92"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline48" app:layout_constraintGuide_percent="0.17"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline49" app:layout_constraintGuide_percent="0.83"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline50" app:layout_constraintGuide_percent="0.45"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline52" app:layout_constraintGuide_percent="0.88"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_study_current_chapter" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline46" android:gravity="center"
            android:background="@color/realYellow"/>
    <Button
            android:text="@string/study_contents_voice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_voice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline46"
            app:layout_constraintStart_toStartOf="@+id/guideline50"
            app:layout_constraintEnd_toStartOf="@+id/guideline52"
    />
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_back_to_chapter"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline52"
            app:layout_constraintBottom_toTopOf="@+id/guideline46" app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:drawable/btn_dialog"
    />
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline46"
            app:layout_constraintBottom_toTopOf="@+id/guideline47" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/contents_panel_study_main">
    </android.support.constraint.ConstraintLayout>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_phrase_prev"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline48"
            app:layout_constraintTop_toTopOf="@+id/guideline47" app:layout_constraintStart_toStartOf="parent"
            android:background="@android:drawable/ic_media_previous"/>
    <Button
            android:text="@string/study_contents_quick_select"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_quick_select" app:layout_constraintStart_toStartOf="@+id/guideline48"
            app:layout_constraintEnd_toStartOf="@+id/guideline49"
            app:layout_constraintTop_toTopOf="@+id/guideline47"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btn_study_phrase_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline47" app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:drawable/ic_media_next"/>
</android.support.constraint.ConstraintLayout>