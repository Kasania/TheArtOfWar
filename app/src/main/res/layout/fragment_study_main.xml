<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/gradinent_background">
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline27" app:layout_constraintGuide_percent="0.92"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/guideline30" app:layout_constraintGuide_percent="0.25"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline31" app:layout_constraintGuide_percent="0.75"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/study_present"
            android:id="@+id/btn_study_quick_select2" app:layout_constraintTop_toTopOf="@+id/guideline27"
            app:layout_constraintStart_toStartOf="@+id/guideline30" app:layout_constraintEnd_toEndOf="@+id/guideline31"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/btn_study_phrase_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline27"
            app:layout_constraintStart_toStartOf="@+id/guideline49"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/btn_study_phrase_next"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/btn_study_phrase_prev"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline48"
            app:layout_constraintTop_toTopOf="@+id/guideline27" app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/btn_study_phrase_prev"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/tv_study_current_chapter"
            app:layout_constraintTop_toTopOf="@+id/guideline27"
            app:layout_constraintStart_toStartOf="@+id/guideline30" app:layout_constraintEnd_toEndOf="@+id/guideline31"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="599dp"
            android:id="@+id/contents_panel_study_main"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline27"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.122"
            android:layout_marginBottom="20dp"/>
</android.support.constraint.ConstraintLayout>